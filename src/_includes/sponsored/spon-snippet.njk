<div class="col-lg-6">     
        
        <!-- Card item START -->
        <div class="card mb-3 mb-sm-4">
            <div class="row g-3">
                <div class="col-4">
                    <img class="rounded-3" src="{{ post.data.image }}" alt="">
                </div>
                <div class="col-8">
                    <a href="#" class="badge bg-info-soft text-info mb-2"><i class="fas fa-circle me-2 small fw-bold"></i>{{ post.data.badge }}</a>
                    <h4><a href="{{ post.url }}" class="btn-link stretched-link text-reset fw-bold">{{ post.data.title }}</a></h4>
                    <!-- Card info -->
                    <ul class="nav nav-divider align-items-center d-none d-sm-inline-block">
                        <li class="nav-item">
                            <div class="nav-link">
                                <div class="d-flex align-items-center position-relative">
                                    <div class="avatar avatar-xs">
                                        <img class="avatar-img rounded-circle" src="{{ post.data.authorImage }}" alt="avatar">
                                    </div>
                                    <span class="ms-3">by <a href="#" class="stretched-link text-reset btn-link">{{post.data.author}}</a></span>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item">{{ post.date | postDate }}</li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- Card item END -->
        
</div>