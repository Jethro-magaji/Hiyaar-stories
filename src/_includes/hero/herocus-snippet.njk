 <!-- Thumb 1 -->
<div class="row align-items-center g-3 mb-4">
    <div class="col-auto">
        <div class="avatar avatar-lg">
            <img class="avatar-img rounded-circle" src="{{ post.data.image }}" alt="avatar">
        </div>
    </div>
    <div class="col-8">
        <h4 class="fw-normal text-truncate mb-1">{{ post.data.title }}</h4>
        <p class="text-truncate d-block col-11 small mb-0">{{ post.data.shortDesc }}</p>
    </div>
</div>